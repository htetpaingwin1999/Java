package View;

import javafx.scene.control.Label;
import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox;
import javafx.scene.paint.Color;
import javafx.scene.text.Font;
import javafx.scene.text.FontPosture;
import javafx.scene.text.FontWeight;

public class IndexTitleView {
	public static VBox vbWelcomeText(String title)
	{
		VBox vbWelcomeText = new VBox();
		Label lTitle = new Label(""+title);
		lTitle.setFont(Font.font("Lucida Fax", FontWeight.NORMAL, FontPosture.REGULAR, 25));	
		vbWelcomeText.getChildren().add(lTitle);
		return vbWelcomeText;
	}
}
